{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
     <section id="hero" class="d-flex align-items-center">    
      <div class="container" data-aos="fade-up">
          <center>
          <div class="section-title">              
          <h2>Enregistrez-vous</h2>        
        </div>
    
    
    

    {{ form_start(registrationForm) }}
    
        <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
            {{ form_label(registrationForm.email) }}<br/>
            {{ form_widget(registrationForm.email) }}
        </div><br/>
        
        <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
            {{ form_label(registrationForm.plainPassword) }}<br/>
        {{ form_widget(registrationForm.plainPassword) }}
        </div><br/>
        
        <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
            {{ form_label(registrationForm.agreeTerms) }}
           {{ form_widget(registrationForm.agreeTerms) }}
        
        </div><br/>
        
        <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
            {{ form_label(registrationForm.lUtilisateur) }}<br/>
            {{ form_widget(registrationForm.lUtilisateur) }}
        </div><br/>
        
        
        <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">            
            <button class="btn btn-lg btn-primary" style='background-color: #cda45e; border-color: black;' type="submit">
                S'inscrire
            </button>
        </div>
        
    {{ form_end(registrationForm) }}  
    
      
    
    
    </center>
      </div>
    </section>
{% endblock %}
